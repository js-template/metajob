{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "singularName": "message",
    "pluralName": "messages",
    "displayName": "Messages",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "sender": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "receiver": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "message": {
      "type": "richtext",
      "required": true
    },
    "medias": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "chat_session": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::chat.chat",
      "inversedBy": "messages"
    },
    "read": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "send_notification": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}

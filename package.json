{
  "name": "padma-monorepo",
  "description": "Padma - The Next.js Framework for Strapi",
  "version": "0.0.4",
  "private": true,
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "scripts": {
    "dev": "lerna run dev --scope @padmadev/core",
    "dev:backend": "lerna run dev --scope @padmadev/padma-backend",
    "build": "lerna run build --scope @padmadev/core",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "lerna": "^8.1.9",
    "prettier": "latest"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

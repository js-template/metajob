{
  "name": "padma-monorepo",
  "description": "Padma - The Next.js Framework for Strapi",
  "version": "0.0.2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {},
  "packageManager": "pnpm@9.11.0"
}

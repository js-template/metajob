{
  "name": "padma-monorepo",
  "description": "Padma - The Next.js Framework for Strapi",
  "version": "1.0.0-alpha.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:core": "lerna run dev --scope @padmadev/core",
    "dev:backend": "lerna run dev --scope @padmadev/backend",
    "build:core": "lerna run build --scope @padmadev/core",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "lerna": "^8.1.9",
    "prettier": "latest"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
